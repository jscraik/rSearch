{
  "name": "@brainwav/rsearch",
  "version": "0.1.6",
  "description": "rSearch CLI for arXiv",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "rsearch": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/add-shebang.cjs",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "audit": "npm audit --audit-level=high",
    "ci": "npm run typecheck && npm test && npm run build",
    "docs:check-links": "markdown-link-check *.md docs/*.md",
    "docs:api": "typedoc",
    "prepublishOnly": "npm run ci",
    "preversion": "git branch --show-current | grep -q '^main$' || (echo 'Releases must occur on main' && exit 1) && npm run prepublishOnly",
    "version": "node scripts/update-changelog.js && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "changelog:update": "node scripts/update-changelog.js",
    "prepack": "npm run build",
    "commit": "node scripts/commit.js"
  },
  "engines": {
    "node": ">=20.18.1"
  },
  "keywords": [
    "arxiv",
    "cli",
    "mcp",
    "research",
    "rsearch"
  ],
  "author": "jscraik",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscraik/rSearch.git"
  },
  "bugs": {
    "url": "https://github.com/jscraik/rSearch/issues"
  },
  "homepage": "https://github.com/jscraik/rSearch#readme",
  "dependencies": {
    "cheerio": "^1.2.0",
    "fast-xml-parser": "^5.3.4",
    "pdf-parse": "^2.4.5",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/yargs": "^17.0.35",
    "markdown-link-check": "^3.14.2",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  }
}
