{
  "name": "arxiv-cli",
  "version": "0.1.0",
  "description": "arXiv CLI",
  "type": "module",
  "bin": {
    "arxiv": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/add-shebang.cjs",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "audit": "npm audit --audit-level=high",
    "ci": "npm run typecheck && npm test && npm run build",
    "docs:check-links": "markdown-link-check *.md docs/*.md",
    "docs:api": "typedoc"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "arxiv",
    "cli",
    "mcp",
    "research"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2",
    "fast-xml-parser": "^5.3.3",
    "pdf-parse": "^2.4.5",
    "yargs": "^18.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.35",
    "markdown-link-check": "^3.14.2",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
