{
  "name": "@brainwav/rsearch",
  "version": "0.1.1",
  "description": "rSearch CLI for arXiv",
  "type": "module",
  "bin": {
    "rsearch": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/add-shebang.cjs",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "audit": "npm audit --audit-level=high",
    "ci": "npm run typecheck && npm test && npm run build",
    "docs:check-links": "markdown-link-check *.md docs/*.md",
    "docs:api": "typedoc",
    "release": "npm run ci && npm run release:version && npm run release:publish",
    "release:version": "npm version patch --no-git-tag-version && npm run changelog:update",
    "release:minor": "npm version minor --no-git-tag-version && npm run changelog:update",
    "release:major": "npm version major --no-git-tag-version && npm run changelog:update",
    "release:publish": "git add . && git commit -m \"chore: release v$(node -p \"require('./package.json').version\")\" && git tag v$(node -p \"require('./package.json').version\") && git push && git push --tags",
    "changelog:update": "node scripts/update-changelog.js",
    "prepack": "npm run build",
    "commit": "node scripts/commit.js"
  },
  "engines": {
    "node": ">=20.18.1"
  },
  "keywords": [
    "arxiv",
    "cli",
    "mcp",
    "research",
    "rsearch"
  ],
  "author": "jscraik",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscraik/rSearch.git"
  },
  "bugs": {
    "url": "https://github.com/jscraik/rSearch/issues"
  },
  "homepage": "https://github.com/jscraik/rSearch#readme",
  "dependencies": {
    "cheerio": "^1.2.0",
    "fast-xml-parser": "^5.3.4",
    "pdf-parse": "^2.4.5",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.35",
    "markdown-link-check": "^3.14.2",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
